<Window x:Class="TaskEngine.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfui="Wpf.Ui.Controls"
        Title="Client"
        Height="200"
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="12" Background="{DynamicResource SolidBackgroundFillColorBase}" Padding="10">
        <Grid Margin="15">
            <StackPanel>
                <TextBlock x:Name="InfoBlock"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

                <TextBlock x:Name="StatusBlock"
                       FontSize="14"
                       Foreground="#6E6E6E"
                       Margin="0,0,0,10"/>
            </StackPanel>
        </Grid>
    </Border>

</Window>
