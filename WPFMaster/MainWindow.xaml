<Window x:Class="TaskEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Engine"
        Height="600" Width="950"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#DCEFFE" Offset="0"/>
            <GradientStop Color="#BEFCFF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        
        
        <DockPanel LastChildFill="True" Margin="10">
            <TextBlock x:Name="TitleBlock"
                       DockPanel.Dock="Top"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,8"
                       Foreground="Black"/>
            <TextBlock x:Name="StatusBlock"
                       DockPanel.Dock="Top"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"
                       Foreground="Gray"/>

            <!-- ✅ StackPanel VERTICAL para laboratorios (Expander) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="CardsPanel" Orientation="Vertical" />
            </ScrollViewer>
        </DockPanel>

        <Canvas x:Name="ToastContainer"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 20 20"
                IsHitTestVisible="False"/>
    </Grid>

    <!-- ✅ Estilo MÍNIMO para Expander (solo flecha) -->
    <Window.Resources>
        <Style x:Key="TextHeaderStyle" TargetType="Expander">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#3C3C3C"
                               HorizontalAlignment="Left"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

</Window>