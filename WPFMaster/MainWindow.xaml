<Window x:Class="WPFMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Master Monitor" Height="500" Width="900">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="TitleBlock" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="MachinesGrid" AutoGenerateColumns="True" Height="380"/>
            <TextBlock x:Name="StatusBlock" FontSize="12" Margin="0,6,0,0"/>
        </StackPanel>
    </Grid>
</Window>
