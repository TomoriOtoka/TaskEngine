<Window x:Class="TaskEngine.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Master Login" Width="300" Height="150">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <PasswordBox x:Name="TxtPassword" 
                     Width="200"
                     Margin="0 0 0 10"
                     HorizontalAlignment="Center"/>

        <Button Grid.Row="1"
                Width="200"
                Content="Entrar"
                Click="BtnOk_Click"
                HorizontalAlignment="Center"/>
    </Grid>
</Window>
